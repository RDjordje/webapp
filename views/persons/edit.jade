extends ../layout

block content
    h1.
        Person ID #{person._id}
    form(action='/persons/#{person._id}/edit',method='post',name='updateperson',enctype='application/x-www-form-urlencoded')
        p Name:
            input#inputName(type='text', value='#{person.name}', name='Name')
        p Surname:
            input#inputSurname(type='text', value='#{person.Surname}', name='Surname')
        p CreatedDate:
            input#inputCreatedDate(type='text', value='#{person.CreatedDate}', name='CreatedDate')
        p City:
            input#inputCity(type='text', value='#{person.City}', name='City')
        p Adress:
            input#inputAdress(type='text', value='#{person.Adress}', name='Adress')
        p Phone:
            input#inputPhone(type='text', value='#{person.Phone}', name='Phone')

        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update
